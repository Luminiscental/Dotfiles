conky.config = {

-- general

    background = false,
	use_xft = true,
	update_interval = 1,
	imlib_cache_size = 0,
	total_run_times = 0,

-- window config

	own_window = true,
	own_window_type = 'override',
    own_window_class = 'Conky',
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	own_window_argb_visual = true,

	-- full transparency
	own_window_transparent = true,

	-- partial transparency
	--own_window_transparent = false,
	--own_window_argb_value = 200,
    --own_window_colour = '#1E272B',

	double_buffer = true,

-- appearance

	alignment = 'bottom_right',

	minimum_width = 5,
	minimum_height = 5,

	gap_x = 30,
	gap_y = 30,

    stippled_borders = 0,
	draw_shades = false,
	draw_outline = false,
	draw_borders = true,
	draw_graph_borders = true,
    border_width = 0.5,

	default_color = '#101010',
	default_shade_color = '#101010',
	cpu_avg_samples = 1,

-- font

	uppercase = false,
    font = 'DejaVu Sans Mono:size=12',
    use_spacer = 'none',

-- colors

    color1 = '#D99F57',
    color2 = '#78824B'
}

conky.text = [[
${color1}Uptime$color      $uptime
$hr
${color1}/ $color          ${fs_used /}/${fs_size /} ${fs_bar 6 /}
${color1}/home/ $color     ${fs_used /home/}/${fs_size /home/} ${fs_bar 6 /home/}
$hr
${color1}Frequency$color   $freq MHz
${color1}RAM Usage$color   $mem/$memmax - $memperc% ${membar 4}
${color1}Swap Usage$color  $swap/$swapmax - $swapperc% ${swapbar 4}
${color1}CPU Usage$color   $cpu% ${cpubar 4}
${color1}Processes$color   $processes
$hr
${color1}Name                     PID   CPU%   MEM%
${color2}${top name 1}       ${top pid 1} ${top cpu 1} ${top mem 1}
${color2}${top name 2}       ${top pid 2} ${top cpu 2} ${top mem 2}
${color2}${top name 3}       ${top pid 3} ${top cpu 3} ${top mem 3}
${color2}${top name 4}       ${top pid 4} ${top cpu 4} ${top mem 4}
${color2}${top name 5}       ${top pid 5} ${top cpu 5} ${top mem 5}
]]
